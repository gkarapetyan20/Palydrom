#include "pal.hpp"
using namespace std;
   int  Palydrom() {
       		string h;

   			int length;

       				bool isPalindrome = true;

       		cout << "Enter a word: ";

       			getline(cin, h);

    				  length = h.length();

      		for (int i = 0; i < (length / 2); i++) {

         		 if (h[i] != h[(length - 1) - i])

              				isPalindrome = false;
     			 }
  
      			  if (isPalindrome == true)
        				  cout << h << " is a palindrome" << endl;
  
      				else
         				 cout << h << " is not a palindrome" << endl;
  
 		    return 0;
  }
